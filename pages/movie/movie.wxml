<!--电影明细  -->
<loading hidden="{{!loading}}">加载中...</loading>
<scroll-view scroll-y="true">
  <view class="meta">
    <image class="poster" src="{{movie.images.large}}"></image>
    <text class="title">{{movie.title}}({{movie.year}})</text>
    <text class="info">评分：{{movie.rating.average}}</text>
    <text class="info">导演：<block wx:for="{{movie.directors}}" wx:key="mov">{{item.name}}</block></text>
    <text class="info">主演：<block wx:for="{{movie.casts}}" wx:key="movs">{{item.name}}</block></text>
  </view>
  <view class="summary">
    <text class="label">摘要：</text>
    <text class="content">{{movie.summary}}</text>
  </view>
</scroll-view>